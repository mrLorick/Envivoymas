<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Envivoymas" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewLightStyle">
        <item name="fontFamily">@font/urbanist_regular</item>
    </style>

    <style name="TextViewStyleSemiBold">
        <item name="fontFamily">@font/urbanist_semi_bold</item>
    </style>

    <style name="TextViewStyleBold">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewStyleMedium">
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextViewStyleBoldHeading">
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="btnLayerStyle">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>

        <item name="colorPrimary">@color/blackish</item>
        <item name="colorPrimaryDark">@color/blackish</item>
        <item name="colorAccent">@color/blackish</item>
    </style>

    <style name="InputEditText">
        <item name="fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textCursorDrawable">@drawable/cstm_cursor_black</item>
    </style>

    <style name="borderBtnLayerStyle">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
<!--        <item name="background">@drawable/cstm_border_payment_btn</item>-->
    </style>

</resources>